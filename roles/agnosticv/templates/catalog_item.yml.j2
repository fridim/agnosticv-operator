---
apiVersion: template.openshift.io/v1
kind: templates
metadata:
  name: {{ _name }}
  annotations:
    description: "{{ vars.merged_vars.__meta__.catalog.description | d(default_description) }}"
    template.openshift.io/bindable: "false"
  resourceVersion: "{{ current_resource_version }}"
  openshift.io/provider-display-name: Red Hat, Inc.
  labels:
    gpte.redhat.com/agnosticv: "true"
  tags: quickstart,babylon,{{ account | replace('_', '-') }},{{ vars.merged_vars.__meta__.catalog.tags | d('') }}
message: "{{ vars.merged_vars.__meta__.catalog.message | d(default_message) }}"
objects:
- apiVersion: poolboy.gpte.redhat.com/v1
  kind: ResourceClaim
  metadata:
    generateName: anarchy-subject-
  spec:
    template:
      apiVersion: anarchy.gpte.redhat.com/v1
      kind: AnarchySubject
      metadata:
        annotations:
          poolboy.gpte.redhat.com/resource-provider-name: babylon
        generateName: {{ _name }}-
        labels:
          governor: {{ _name }}
      spec:
        governor: {{ _name }}
        parameters:
{% for param in vars.merged_vars.__meta__.catalog.parameters | d([]) %}
          {{ param.name | lower }}: {{ '${{' ~ param.name ~ '}}' }}
{% endfor %}

parameters: {{ vars.merged_vars.__meta__.catalog.parameters | d([]) | to_json }}
labels: {{ default_labels | combine(vars.merged_vars.__meta__.catalog.labels | d({})) | to_json }}
