---
apiVersion: template.openshift.io/v1
kind: templates
metadata:
  name: {{ _name | to_json }}
  namespace: {{ _namespace | to_json }}
  annotations:
    description: {{ _description | to_json }}
    openshift.io/display-name: {{ vars.merged_vars.__meta__.catalog.display_name| default(_name) | to_json }}
    openshift.io/long-description: {{ vars.merged_vars.__meta__.catalog.long_description | d('') | to_json }}
    tags: quickstart,babylon,{{ account | replace('_', '-') }},{{ vars.merged_vars.__meta__.catalog.tags |  default([]) | join(',') }}
    template.openshift.io/bindable: "false"
{% if current_resource_version | default('') != '' %}
  resourceVersion: "{{ current_resource_version }}"
{% endif %}
  openshift.io/provider-display-name: Red Hat, Inc.
  labels:
    gpte.redhat.com/agnosticv: "true"
message: {{ vars.merged_vars.__meta__.catalog.message | d(default_message) | to_json }}
objects:
- apiVersion: poolboy.gpte.redhat.com/v1
  kind: ResourceClaim
  metadata:
    annotations:
      description: {{ vars.merged_vars.__meta__.catalog.description | d(default_description) | to_json }}
      openshift.io/display-name: {{ vars.merged_vars.__meta__.catalog.display_name| default(_name) | to_json }}
      openshift.io/long-description: {{ vars.merged_vars.__meta__.catalog.long_description | default('') | to_json }}
{% for param in _annotation_parameters %}
      {{ param.annotation }}: {{ '${{' ~ param.name ~ '}}' }}
{% endfor %}
    generateName: {{ _name }}-
  spec:
    resources:
{% for _component in vars.merged_vars.__meta__.components | default([]) %}
    - provider:
        apiVersion: poolboy.gpte.redhat.com/v1
        kind: ResourceProvider
        name: {{ _component.item | replace('_', '-') | replace('/', '.') | lower }}.{{ stage }}
        namespace: {{ poolboy_namespace | to_json }}
{#   Only use parameters for component if explicitly declared with resourceIndexes #}
{%   if _job_vars_parameters | json_query('[?resourceIndexes!=`null` && contains(resourceIndexes, `' ~ loop.index0 ~ '`)]') %}
      template:
        spec:
          vars:
            job_vars:
{%     for param in _job_vars_parameters | json_query('[?resourceIndexes!=`null` && contains(resourceIndexes, `' ~ loop.index0 ~ '`)]') %}
              {{ param.variable | default(param.name) }}: {{ '${{' ~ param.name ~ '}}' }}
{%     endfor %}
{%   endif %}
{% endfor %}
{% if None != vars.merged_vars.__meta__.deployer.type | default(None) %}
    - provider:
        apiVersion: poolboy.gpte.redhat.com/v1
        kind: ResourceProvider
        name: {{ _name | to_json }}
        namespace: {{ poolboy_namespace | to_json }}
{%   if _job_vars_parameters | json_query('[?resourceIndexes==`null` || contains(resourceIndexes, `"@"`)]') %}
      template:
        spec:
          vars:
            job_vars:
{%     for param in _job_vars_parameters | json_query('[?resourceIndexes==`null` || contains(resourceIndexes, `"@"`)]') %}
              {{ param.variable | default(param.name) }}: {{ '${{' ~ param.name ~ '}}' }}
{%     endfor %}
{%   endif %}
{% endif %}

{% if vars.merged_vars.__meta__.catalog.parameters is defined %}
parameters:
{%   for parameter in vars.merged_vars.__meta__.catalog.parameters %}
- name: {{ parameter.name | to_json }}
{%     if parameter.description is defined %}
  description: {{ parameter.description | to_json }}
{%     endif %}
{%     if parameter.formLabel is defined %}
{%       if parameter.formGroup is defined %}
  displayName: {{ (parameter.formGroup ~ ' - ' ~ parameter.formLabel) | to_json }}
{%       else %}
  displayName: {{ parameter.formLabel | to_json }}
{%       endif %}
{%     endif %}
{%     if parameter.required | default(false) | bool %}
  required: true
{%     endif %}
{%     if parameter.value is defined %}
  value: {{ parameter.value | to_json }}
{%     elif parameter.openAPIV3Schema.default is defined %}
  value: {{ parameter.openAPIV3Schema.default | to_json | to_json }}
{%     endif %}
{%   endfor %}
{% endif %}
labels: {{ default_labels | combine(vars.merged_vars.__meta__.catalog.labels | d({})) | to_json }}
